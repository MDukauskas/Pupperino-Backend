{% extends 'base.html.twig' %}

{% block body %}
    {% for vet in vets %}
        <a class="wrapper" href="{{ vet.url }}">
            {#<img class="picture" src="{{ vet.picture }}"/>#}
            <div class="data">
                <div class="name">{{ vet.name }}</div>
                <div class="star-wrapper">
                    {% for n in 1..vet.rating %}
                        <img class="star" src="pictures/star.svg"/>
                    {% endfor %}
                </div>
                {% if vet.is_open_now %}
                    <span class="green">Open now</span>
                {% else %}
                    <span class="red">Closed now</span>
                {% endif %}
                <span class="grey">Distance: {{ vet.distance }} km</span>
                <br />
                <span class="grey">Address: {{ vet.address }}</span>
            </div>
        </a>
    {% endfor %}
{% endblock %}

{% block stylesheets %}
    <style>
        .red {
            color: red;
            font-weight: 600;
        }
        .green {
            color: #4CD964;
            font-weight: 600;
        }
        .grey {
            color: #666;
            font-size: 10px;
        }
        .wrapper .picture {
            width: 21%;
            display: inline-block;
            padding: 10px;
            border-radius: 50%;
            margin-top: -65px;
        }
        .star {
            width: 15px;
            height: 15px;
        }
        .data {
            width: 70%;
            display: inline-block;
            margin-top: 10px;
            margin-left: 20px;
        }
        .wrapper {
            border-radius: 7px;
            background: #fff;
            margin: 10px 10px 10px;
            padding-bottom: 15px;
            display: block;
            text-decoration: none !important;
        }
        body {
            background: #EFEFF4;
        }
        .name {
            font-size: 20px;
            color: #000;
            font-weight: bold;
            padding-top: 5px;
        }
        .header {
            background: #5856D6;
            display: block;
            font-size: 25px;
            color: #fff;
            font-weight: bold;
            padding: 5px 0;
            text-align: center;
        }
    </style>
{% endblock %}
