{% extends 'base.html.twig' %}

{% block body %}
    <div class="body">
        <div class="wrapper">
            <div class="header">Exercise list</div>
            {% for exercise in exercises %}
                <div class="walk">
                    Bobikas was out for a walk for {{ exercise.duration }} mins. ({{ exercise.distance }} km)

                    {% if loop.index != exercises|length %}
                        <hr/>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: #EFEFF4;
        }

        .wrapper {
            border-radius: 7px;
            background: #fff;
            margin: 10px 10px 10px;
            padding-bottom: 15px;
            display: block;
            text-decoration: none !important;
        }

        .walk {
            padding: 10px 5px 0px 15px;
        }

        .header {
            text-align: center;
            padding-top: 5px;
            padding-bottom: 5px;
            font-size: 20px;
            font-weight: 600;
        }
    </style>
{% endblock %}
